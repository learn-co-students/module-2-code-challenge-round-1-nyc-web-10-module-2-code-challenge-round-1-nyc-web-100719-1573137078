<h2>Create a New Heroine!<h2>

<%= form_for :heroine do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :super_name %><br>
    <%= f.text_field :super_name %>
    <br>
    <%= f.label "Choose a Power: " %><br>
    <%= collection_select(:heroine, :power_id, Power.all, :id, :name, prompt: true) %>
    <%= f.submit %>
<% end %>