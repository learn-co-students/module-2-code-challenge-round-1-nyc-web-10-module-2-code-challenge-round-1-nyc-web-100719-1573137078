<h2>Create a new Heroine</h2>

<% if flash[:error] %>
  <% flash[:error].each do |message| %>
  <p style="color:red"><%= message %></p>
  <% end %>
<% end %>

<%= form_for @heroine do |form| %>
<%= form.label "Name: " %>
<%= form.text_field :name %>
<br>
<%= form.label "Super Name: " %>
<%= form.text_field :super_name %>
<br>
<%= form.label "Power: " %>
<%= form.collection_select(:power_id, @powers, :id, :name) %>
<br>
<%= form.submit "Create your hero" %>
<% end %>