<h1>🦸🏽‍♀️ Create New Heroine!! 🦸🏽‍♀️</h1>

<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
        <p style = "color :red">🚷 <%=error%></p>
    <%end%>
<%end%>

<%= form_with model: @heroine do |f|%>
    <%=f.label :name%>
    <%= f.text_field :name%>
    <br>
    <%= f.label :super_name%>
    <%= f.text_field :super_name%>
    <br>
    <%= f.collection_select  :power_id, @powers, :id, :name, prompt: true%>
    <%= f.submit%>
<%end%>